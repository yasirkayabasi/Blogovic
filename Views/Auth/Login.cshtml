@model LoginViewModel
@{
    ViewData["Title"] = "Giriş";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
<img src="https://www.kindpng.com/picc/m/130-1300332_user-icon-remix-clip-arts-computer-icons-avatar.png" alt="User Icon Remix Clip Arts - Computer Icons Avatar Png, Transparent             <br />
          
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (TempData["message"] != null)
        {
                <div class="text-success">@TempData["message"]</div>
        }

        <!-- Login Form -->
        <form asp-action="Login" asp-controller="Auth" method="post" asp-route-yonlen="@ViewBag.yonlen">
            <input asp-for="Email" class="fadeIn second" placeholder="Email Giriniz" />
            <br />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input type="submit" value="Giriş Yap" class="fadeIn fourth" />
        </form>

        @*Register?*@
        <div id="formFooter">
            <a asp-action="Register" asp-controller="Auth" class="underlineHover">Kayıt Olmak İster Misin?</a>
        </div>
    </div>
</div>